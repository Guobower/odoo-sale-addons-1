<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_sale_show_discount_form" model="ir.ui.view">
    <field name="name">sale.show.discount.form.inherit</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml"> 
      <field name="amount_total" position="after">
        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
          <label for="total_discount" />
        </div>
        <field name="total_discount" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}" />
      </field>
    </field>
  </record>

</odoo>
